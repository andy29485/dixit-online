extends layout

prepend title
  - let waiting = 0;
  - let section = "Waiting";

block content
  div.table-responsive
    table
      - let index = 0
      th(colspan=3) Waiting
      each player in players
        if player.stat === 'Waiting'
          - ++waiting;
        tr
          td #{++index}
          td #{player.name}
          td #{player.stat}
    div
      | Stage Ends
      |
      b #{enddate.toISOString().replace(/[A-Z]/g, ' ')}
    div
      a(href="?edit") Edit
      
      if uname === players[0].uname && waiting === 0
        form(action="/next/"+gameid, method="POST")
          button(type='submit', class="btn btn-primary") Next
