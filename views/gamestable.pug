unless timetag
  - let timetag = lang.end_date_join

div.table-responsive
  table(class="table table-striped table-bordered")
    tr
      th #{lang.game_name}
      th #{lang.stage}
      th #{lang.admin}
      th #{lang.players_and_limit}
      th #{timetag}
      th #{lang.delete}
      
    - let index = 1
    for game in gamesarray
      if !maxdisplay || index < maxdisplay
        - ++index
        - let admin = (game.adminu === uname);
        tr
          td(style="text-align:left")
            a(href='/game/'+game.code) #{game.name}
          td #{game.stage}
          td #{game.admin}
          td #{game.joined}
            |
            | /
            |
            | #{game.max===0 ? lang.no_limit : game.max}
          td #{game.date.toISOString().replace(/[A-Z].*/, '')}
          td
            form(action='/delete/'+game.code, method='POST')
              button(
                class="btn btn-danger",
                type="submit",
                disabled=!admin,
                title=(admin 
                      ? lang.delete_explain
                      : lang.delete_not_admin
                ),
              ) #{lang.delete}
      else
        - break
