doctype html
html
  head
    title Dixit Online - Choose Cards
    link(href='/css/main.css', rel='stylesheet')
  body
    h1 #{gamename}
    h2 Choose Cards
    a(href="/logout") Logout
    a(href="/profile") Profile
    
    form(action="/caption/"+code, method="POST")
      include cards.pug
      input(
        type="text",
        name="quote",
        value=caption,
        placeholder="Caption",
        required
      )
      input(type="submit", value="Submit")
    div
      | Stage Ends
      |
      b #{enddate.toISOString().replace(/[A-Z]/g, ' ')}
