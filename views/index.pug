extends layout

prepend title
  - let section  = "";
  - let gamename = t('title');
  - let ignore_logout = ignore_profile = true;

block content
  if goodmessage.length
    div(class="alert alert-success")
      a(href="#" class="close" data-dismiss="alert") &times;
      strong #{t('success')}
      ul
        each msg in goodmessage
          li #{t(msg)}
          
  ul(class="nav nav-tabs"  role="tablist")
    li.nav-item
      a(class="nav-link "+(register?"":"active"),data-toggle="tab",href="#signin") 
        | #{t('sign_in')}
    li.nav-item
      a(class="nav-link "+(register?"active":""),data-toggle="tab",href="#signup")
        | #{t('sign_up')} 
  div.tab-content
    div(id="signin", class="tab-pane fade "+(register?"":"in active show"))
      include login
    div(id="signup", class="tab-pane fade "+(register?"in active show":""))
      include register
