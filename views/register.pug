unless form
  - form = {}

script.
  const pass_missmatch = t('pass_missmatch');
  function validateForm() {
    var p1 = document.forms["regForm"]["password"].value;
    var p2 = document.forms["regForm"]["password2"].value;
    var un = document.forms["regForm"]["username"].value;
    if (p1 !=== p2) {
      alert(pass_missmatch);
      return false;
    }
    return true;
  } 

if regmessage.length
  div(class="alert alert-danger")
    a(href="#" class="close" data-dismiss="alert") &times;
    strong #{t('error')}
    ul
      each msg in regmessage
        li #{msg}
    
form(action="/register",
     name="regForm",
     method="POST",
     onsubmit="return validateForm()",
  )
  table
    tr
      td(style="text-align:left")
        label #{t('name')}:
      td
        input.form-control(
          type="text"
          name="name"
          value=form.name
          required
        )
    tr
      td(style="text-align:left")
        label #{t('language')}:
      td
        select.form-control(name="lang")
          option(value="en" selected=('en'==form.lang)) English
          option(value="ru" selected=('ru '==form.lang)) Русский
    tr
      td(style="text-align:left")
        label #{t('username')}:
      td
        input.form-control(
          type="text"
          name="username"
          placeholder=t('ex_uname')
          value=form.username
          required
        )
    tr
      td(style="text-align:left")
        label #{t('email')}:
      td
        input.form-control(
          type="email"
          name="email"
          value=form.email
          placeholder=t('ex_email')
        )
    tr
      td(style="text-align:left")
        label #{t('password')}:
      td
        input.form-control(type="password", name="password" required)
    tr
      td(style="text-align:left")
        label #{t('conf_pass')}:
      td
        input.form-control(type="password", name="password2" required)
  button(type="submit", class="btn btn-primary") #{t('submit_button')}
